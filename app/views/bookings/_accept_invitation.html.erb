
<button type="button" class="btn send-button" id= "init-form-button" data-target="#messageModal" data-toggle="modal" style="margin-bottom: 10px">Accept Invitation</button>



<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="messageModalLabel">Please Input A Phone Number</h5>
      </div>
      <div class="modal-body">
       <%= simple_form_for [@booking, @guest] do |f| %>
        <%= f.input :name %>
      </div>
      <div class="footer">
        <%= f.submit 'Confirm', class: 'btn send-button' %>
        <% end %>
      </div>
    </div>
  </div>
</div>



