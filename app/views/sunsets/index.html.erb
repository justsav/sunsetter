<div class="sunset-bg">
<h3>Choose The Best Day to Enjoy a <%= @city.name %> Sunset</h3>
<div class="sunset-container">
  <% @sunsets.each do |sunset| %>
  <div class="sunset-card">
    <%= image_tag('sunset_placeholder.png') %>
    <div class="sunset-card-info">
      <h2><%= sunset.date %></h2>
      <p>Sunset Timing: <%= ApplicationHelper.converted_time(sunset.start) %> - <%= ApplicationHelper.converted_time(sunset.end) %></p>
      <p>Golden Hour: <%= ApplicationHelper.converted_time(sunset.gold_start) %> - <%= ApplicationHelper.converted_time(sunset.gold_end) %></p>
    </div>
    <%= link_to 'OK', city_places_path(sunset.city, :date_session => sunset.date) %>
  </div>
  <% end %>
</div>
<% session[:date] = "" %>
</div>