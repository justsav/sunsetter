<div class="landing-bg">
<div id="videoBG" autoplay muted loop>
  <%= video_tag('romantic-sunset.mp4', autoplay: :autoplay, loop: :loop, muted: 'muted', poster: 'romantic-sunset.jpg', id: 'videoBG') %>
  <!-- <source src="assets/footage1.mp4" type="video/mp4"> -->
</div>
  <div class="landing-overlap">
  <div class="landing-container">
    <div class="container search-container">
      <div class="landing-title">
        <h1 style="font-family: Calistoga">Sunsetter</h1>
      </div>
      <div class="landing-subtitle">
        <h3>The sun sets once a day-</h3>
        <h3>make the most of the moment.</h3>
      </div>
      <div class="row">
        <div class="col-8">
          <div class="landing-city-input">
            <%= form_tag sunsets_path, method: :get do %>
            <%= text_field_tag :city,
            params[:city],
            class: "form-control",
              placeholder: "Enter Your City"
              %>
            </div>
          </div>
          <div class="col-4">
            <div class="landing-form-action">
              <%= submit_tag "Begin", class: "btn btn-dark" %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
